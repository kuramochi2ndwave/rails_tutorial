<h1>新規ブログ投稿</h1>

<%= form_for(@blog) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
    <%= f.label :title,"タイトル" %>
    <%= f.text_field :title %>

    <%= f.label :content,"コンテンツ" %>
    <%= f.text_field :content %>

    <%= f.submit "登録", class: "btn btn-success" %>
    <%= link_to "戻る", blogs_path, class: "btn btn-default" %>
<% end %>