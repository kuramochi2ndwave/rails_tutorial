<h1>ブログ修正画面</h1>

<%= form_for(@blog) do |f| %>
  <%= flash[:success] %>
  <p>
  <%= f.label :title,"タイトル" %>
  <%= f.text_field :title %>
  </p>
  <p>
  <%= f.label :content,"コンテンツ" %>
  <%= f.text_field :content %>
  </p>
  <p>
  <%= f.submit "変更", class: "btn btn-success" %>
  <%= link_to "戻る", blogs_path, class: "btn btn-default" %>
  </p>
<% end %>