<h1>ブログ一覧表</h1>

  <% if logged_in? %>
    <div>
      <%= link_to "新規投稿画面", new_blog_path %>
    </div>
  <% end %>
  <table border ="1">
    <tr align='left'>
      <th>No</th>
      <th>タイトル</th>
      <th>コンテンツ</th>
      <% if logged_in? %>
        <th>編集リンク</th>
        <th>削除リンク</th>
      <% end %>
    </tr>

    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.id %></td>
        <td><%= link_to blog.title, blog_path(:id => blog.id) %></td>
        <td><%= blog.content %></td>
        <% if logged_in? %>
        <td><%= link_to "編集", edit_blog_path(:id => blog.id) %></td>
        <td><%= link_to "削除", blog_path(:id => blog.id), method: :delete, data: {confirm: "この記事を削除しますか？"} %></td>
        <% end %>
      </tr>
    <% end %>
  </table>

